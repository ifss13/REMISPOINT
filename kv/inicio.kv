MDScreen:
    name: 'inicio'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
    
    MDBottomNavigation:
        panel_color:"lightgrey"
        selected_color_background: "orange"
        text_color_active: "black"

        MDBottomNavigationItem:
            name: 'home'
            text: 'Inicio'
            icon: 'home'

            MDLabel:
                id: bienvenido
                text:''
                halign: 'center'
                pos_hint: {"center_x": .5 , "center_y": .75}
            MDIconButton:
                icon: "chevron-left"
                user_font_size: "35sp"
                pos_hint: {"center_y": .95}
                on_release: 
                    root.manager.transition.direction = "right"
                    app.login()
                    


            MDLabel:
                text:"Atras"
                font_size: "18sp"
                pos_hint: {"center_x": .615 , "center_y": .95}

            Image:
                source: "assets/Remis-Point.png"
                size_hint: .50, .50
                pos_hint: {"center_x": .20, "center_y": .85}

            MDLabel:
                text:"REMIS POINT"
                pos_hint: {"center_x": .849, "center_y": .849}
                halling: "center"
                theme_text_color: "Custom"
                text_color: 255,255,255,1
                font_size: "30sp"  

            MDLabel:
                text: "Remiser√≠as disponibles:"
                pos_hint: {"center_x": .53, "center_y": .60}
                text_color: 255,255,255,1
                halling: "center"
                font_size: "16sp"
            
            MDRectangleFlatIconButton:
                icon: "assets/Remis_obe_logo.ico"
                text: "RemisObe"
                theme_text_color: "Custom"
                text_color: 255,255,255,1
                line_color: "orange"
                theme_icon_color: "Custom"
                pos_hint: {"center_x": .50, "center_y": .50}
                size_hint: 0.9,0.05
                on_press: 
                    app.remises()
                    root.manager.transition.direction = "left"

            
        MDBottomNavigationItem:
            name: 'buscar'
            text: 'Buscar'
            icon: 'magnify'

            MDIconButton:
                icon: "chevron-left"
                user_font_size: "35sp"
                pos_hint: {"center_y": .95}
                on_release: app.login()

            MDLabel:
                text:"REMIS POINT"

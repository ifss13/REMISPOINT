                halling: "center"
                theme_text_color: "Custom"
                text_color: 255,255,255,1
                font_size: "30sp" 

            MDLabel:
                text:"Atras"
                font_size: "18sp"
                pos_hint: {"center_x": .615 , "center_y": .95}
            Image:
                source: "assets/Remis-Point.png"
                size_hint: .50, .50
                pos_hint: {"center_x": .20, "center_y": .85}

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.7
                pos_hint: {"top": 0.75}
                MapView:
                    id: mapview
                    size_hint_y: 0.7  
                MDTextField:
                    id: salida
                    hint_text: "Ingresa dir. de salida"
                    helper_text: ""
                    helper_text_mode: "persistent"
                    pos_hint: {"center_x": .5 , "center_y": .70}
                    size_hint_x: .85
                    line_color_focus: 0,0,0,1
                MDTextField:
                    id: llegada
                    hint_text: "Ingrese Destino"
                    helper_text: ""
                    helper_text_mode: "persistent"
                    pos_hint: {"center_x": .5 , "center_y": .60}
                    size_hint_x: .85
                    line_color_focus: 0,0,0,1
                MDFlatButton:
                    text: "Calcular"
                    size_hint: .55, .08
                    pos_hint:{"center_x": .50, "center_y": 0.45}
                    on_press: app.calculo()
                    canvas.before:
                        Color:
                            rgb: 252/255, 127/255, 65/255, 255
                        RoundedRectangle:
                            size: self.size
                            pos:self.pos
                            radius: [6]
            
        MDBottomNavigationItem:
            name: 'info'
            text: 'Info'
            icon: 'account'


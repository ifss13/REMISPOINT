#:kivy 2.2.1
#: import SlideTransition kivy.uix.screenmanager
MDScreen:
    name: 'inicio_chofer'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
    
    MDBottomNavigation:
        panel_color:"lightgrey"
        selected_color_background: "orange"
        text_color_active: "black"

        MDBottomNavigationItem:
            name: 'home'
            text: 'Inicio'
            icon: 'home'

            MDLabel:
                id: bienvenido
                text:''
                halign: 'center'
                pos_hint: {"center_x": .5 , "center_y": .75}
            MDIconButton:
                icon: "chevron-left"
                user_font_size: "35sp"
                pos_hint: {"center_y": .95}
                on_release: 
                    root.manager.transition.direction = "right"
                    app.login()
                    


            MDLabel:
                text:"Atras"
                font_size: "18sp"
                pos_hint: {"center_x": .615 , "center_y": .95}

            Image:
                source: "assets/Remis-Point.png"
                size_hint: .50, .50
                pos_hint: {"center_x": .20, "center_y": .85}

            MDLabel:
                text:"REMIS POINT"

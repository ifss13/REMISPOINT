#:kivy 2.2.1
#: import SlideTransition kivy.uix.screenmanager
MDScreen:
    name: 'remises'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_press: 
                root.manager.transition.direction = "right"
                root.manager.current = "inicio"

        MDLabel:
            text:"Atras"
            font_size: "18sp"
            pos_hint: {"center_x": .615 , "center_y": .95}

        Image:
            source: "assets/Remis-Point.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .20, "center_y": .85}


        MDFlatButton:
            text: "Solicitar Remis"
            size_hint: .79, .08
            pos_hint:{"center_x": .50, "center_y": 0.07}
            md_bg_color: "orange"
            on_press: app.remis_confirmar()
        

        MDLabel:
            text: "Esta remiseria puede presentar una demora de:"
            pos_hint: {"center_x": .53, "center_y": .75}
            text_color: 255,255,255,1
            halling: "center"
            font_size: "12sp"

        MDLabel:
            text:"REMISERIA X"
            pos_hint: {"center_x": .849, "center_y": .849}
            halling: "center"
            theme_text_color: "Custom"
            text_color: 255,255,255,1
            font_size: "30sp"  

        MDTextField:
            id: mail
            hint_text: "Direccion de Salida"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .62}

            size_hint_x: .85
            line_color_focus: 0,0,0,1


        MDTextField:
            id: password
            hint_text: "Direccion de Destino"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .52}
            password: True
            size_hint_x: .85
            line_color_focus: 0,0,0,1
#:kivy 2.2.1
#: import SlideTransition kivy.uix.screenmanager
MDScreen:
    name: 'registro'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_press: 
                app.login()
                root.manager.transition.direction = "right"

        MDLabel:
            text:"Atras"
            font_size: "12sp"
            pos_hint: {"center_x": .615 , "center_y": .95}



        MDLabel:
            text:"Registro"
            pos_hint: {"center_x": .850, "center_y": .950}
            halling: "center"
            theme_text_color: "Custom"
            text_color: 255,255,255,1
            font_size: "20sp"

        MDLabel:
            text:"Chofer:"
            pos_hint: {"center_x": .57, "center_y": .17}
            halling: "left"
            theme_text_color: "Custom"
            text_color: "grey"
            font_size: "16sp"

        MDTextField:
            id: input_name
            hint_text: "Ingresa Nombre Completo"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .85}
            size_hint_x: .85
            line_color_focus: 0,0,0,1

        Spinner:
            id: input_loc
            text: "Localidad"
            values:[]
            pos_hint: {"center_x": .50 , "center_y": .55}
            size_hint_y: .08
            size_hint_x: .90



        MDTextField:
            id: input_direc
            hint_text: "Direccion"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .65}
            size_hint_x: .85
            line_color_focus: 0,0,0,1

        MDTextField:
            id: input_phone
            hint_text: "Ingresa Tu Telefono"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .45}
            size_hint_x: .85
            line_color_focus: 0,0,0,1

        MDTextField:
            id: input_email
            hint_text: "Ingresa Tu Email*"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .75}
            size_hint_x: .85
            line_color_focus: 0,0,0,1


        MDTextField:
            id: input_password
            hint_text: "Ingresa Tu Contraseña*"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .35}
            password: True
            size_hint_x: .85
            line_color_focus: 0,0,0,1
            text: ""
        
        MDTextField:
            id: input_password_confirmation
            hint_text: "Ingresa Tu Contraseña Nuevamente*"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .25}
            password: True
            size_hint_x: .85
            line_color_focus: 0,0,0,1
            text: ""

        MDFlatButton:
            text: "Registar"
            size_hint: .79, .08
            pos_hint:{"center_x": .50, "center_y": 0.07}
            on_press: 
                app.nuevo_usuario(app.miCursor)
                root.manager.transition.direction = "left"  

            canvas.before:
                Color:
                    rgb: 252/255, 127/255, 65/255, 255
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: [6]
            
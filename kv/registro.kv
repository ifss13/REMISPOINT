#:kivy 2.2.1
#: import SlideTransition kivy.uix.screenmanager
MDScreen:
    name: 'registro'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_press: 
                app.login()
                root.manager.transition.direction = "right"

        MDLabel:
            text:"Atras"
            font_size: "18sp"
            pos_hint: {"center_x": .615 , "center_y": .95}

        Image:
            source: "assets/Remis-Point.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .20, "center_y": .85}

        MDLabel:
            text:"Registro"
            pos_hint: {"center_x": .849, "center_y": .849}
            halling: "center"
            theme_text_color: "Custom"
            text_color: 255,255,255,1
            font_size: "30sp"

        MDTextField:
            id: input_name
            hint_text: "Ingresa Nombre Completo"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .62}

            size_hint_x: .85
            line_color_focus: 0,0,0,1


        MDTextField:
            id: input_phone
            hint_text: "Ingresa Tu Telefono"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .42}
            size_hint_x: .85
            line_color_focus: 0,0,0,1

        MDTextField:
            id: input_email
            hint_text: "Ingresa Tu Email*"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .52}
            
            size_hint_x: .85
            line_color_focus: 0,0,0,1


        MDTextField:
            id: input_password
            hint_text: "Ingresa Tu Contraseña*"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .32}
            password: True
            size_hint_x: .85
            line_color_focus: 0,0,0,1
            text: ""
        
        MDTextField:
            id: input_password_confirmation
            hint_text: "Ingresa Tu Contraseña Nuevamente*"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .22}
            password: True
            size_hint_x: .85
            line_color_focus: 0,0,0,1
            text: ""

        MDFlatButton:
            text: "Registar"
            size_hint: .79, .08
            pos_hint:{"center_x": .50, "center_y": 0.13}
            on_press: 
                app.nuevo_usuario()
                root.manager.transition.direction = "left"

            canvas.before:
                Color:
                    rgb: 252/255, 127/255, 65/255, 255
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: [6]
            
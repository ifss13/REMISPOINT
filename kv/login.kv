#: import SlideTransition kivy.uix.screenmanager
MDScreen:
    name: 'login'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        Image:
            source: "assets/Remis-Point.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .20, "center_y": .85}

        MDLabel:
            text:"REMIS POINT"
            pos_hint: {"center_x": .849, "center_y": .849}
            halling: "center"
            theme_text_color: "Custom"
            text_color: 255,255,255,1
            font_size: "30sp"

        MDTextField:
            id: mail
            hint_text: "Ingresa Tu Email"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .52}

            size_hint_x: .85
            line_color_focus: 0,0,0,1


        MDTextField:
            id: password
            hint_text: "Ingresa Tu Contraseña"
            helper_text: ""
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5 , "center_y": .42}
            password: True
            size_hint_x: .85
            line_color_focus: 0,0,0,1


        MDTextButton:
            text: "¿Has olvidado tu contraseña?"
            font_size:"9sp"
            halling: "center"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .715, "center_y": .37}

        MDFlatButton:
            text: "Registrar"
            size_hint: .55, .08
            pos_hint:{"center_x": .50, "center_y": 0.15}
            on_press: 
                app.registro()
                root.manager.transition.direction = "left"

        MDFlatButton:
            text: "Ingresar"
            size_hint: .79, .08
            pos_hint:{"center_x": .50, "center_y": 0.25}
            on_release: 
                app.completo()
                root.manager.transition.direction = "left"
    
            canvas.before:
                Color:
                    rgb: 252/255, 127/255, 65/255, 255
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius: [6]
            